<footer class="gh-footer{{#match @custom.header_and_footer_color "Accent color"}} has-accent-color{{/match}} gh-outer">
    <div class="gh-footer-inner gh-inner">

        <style>
            .gh-footer-bar {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
                width: 100%;
                gap: 0.6em; /* consistent vertical spacing between elements */
                line-height: 1.6;
            }

            .gh-footer-bar a {
                color: inherit;
                text-decoration: none;
                transition: color 0.2s ease;
            }

            .gh-footer-bar a:hover,
            .gh-footer-bar a:focus {
                color: #1155CC;
                outline: none;
            }

            .footer-links {
                /* Use default site font size */
            }

            .footer-social {
                display: flex;
                gap: 1.2em;
                justify-content: center;
                align-items: center;
            }

            .footer-social a {
                font-size: 0 !important; /* hide text, rely on icons */
            }

            .footer-social a::before {
                font-family: "Font Awesome 6 Brands";
                display: inline-block;
                font-size: 20px;
                font-style: normal;
                font-weight: normal;
                font-variant: normal;
                text-rendering: auto;
                -webkit-font-smoothing: antialiased;
                transition: color 0.2s ease;
            }

            .footer-social a:hover::before {
                color: #1155CC;
            }

            .footer-social .nav-mastodon a::before { content: "\f4f6"; }
            .footer-social .nav-facebook a::before { content: "\f09a"; }
            .footer-social .nav-instagram a::before { content: "\f16d"; }
            .footer-social .nav-linkedin a::before { content: "\f08c"; }
            .footer-social .nav-x a::before { content: "\e61b"; }
            .footer-social .nav-tiktok a::before { content: "\e07b"; }
            .footer-social .nav-pinterest a::before { content: "\f0d2"; }
            .footer-social .nav-youtube a::before { content: "\f167"; }

            .gh-footer-logo {
                margin-top: 0.4em;
                display: inline-block;
            }

            .gh-footer-logo img {
                max-height: 2em;
                height: auto;
                display: block;
            }

            @media (max-width: 600px) {
                .footer-social {
                    flex-wrap: wrap;
                    gap: 0.8em;
                }
            }
        </style>

        <div class="gh-footer-bar">

            <nav class="footer-links">
                <a href="https://consistech.org/terms-of-service/">Terms</a> · 
                <a href="https://consistech.org/privacy-policy/">Privacy</a> ·
                <a href="https://consistech.org/cookies-policy/">Cookies</a> · 
                <a href="https://consistech.org/contact/">Contact</a> · 
                <a href="https://consistech.org/donate/">Donate</a>
            </nav>

            <div class="footer-social">
                <span class="nav-linkedin"><a href="https://linkedin.com/company/consistechorg" target="_blank" rel="noopener">LinkedIn</a></span>
                <span class="nav-facebook"><a href="https://facebook.com/consistechorg" target="_blank" rel="noopener">Facebook</a></span>
                <span class="nav-youtube"><a href="https://youtube.com/@consistechorg" target="_blank" rel="noopener">YouTube</a></span>
                <span class="nav-x"><a href="https://x.com/consistechorg" target="_blank" rel="noopener">X</a></span>
                <span class="nav-instagram"><a href="https://instagram.com/consistechorg" target="_blank" rel="noopener">Instagram</a></span>
                <span class="nav-tiktok"><a href="https://tiktok.com/@consistechorg" target="_blank" rel="noopener">TikTok</a></span>
                <span class="nav-mastodon"><a href="https://mastodon.social/@consistechorg" target="_blank" rel="noopener">Mastodon</a></span>
            </div>

            <div class="gh-footer-site">
                <a href="https://consistech.org/">
                    Copyright © 2025<span id="current-year-end"></span>
                </a>
            </div>

            <script>
            document.addEventListener('DOMContentLoaded', () => {
                const startYear = 2025;
                const currentYear = new Date().getFullYear();
                const yearSpan = document.getElementById('current-year-end');
    
                if (yearSpan) {
                    yearSpan.textContent = currentYear > startYear ? `–${currentYear}` : '';
                }
            });
            </script>

            <a href="https://consistech.org/" class="gh-footer-logo is-title">
                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}">
                {{else}}
                    {{@site.title}}
                {{/if}}
            </a>

        </div>
    </div>
</footer>
